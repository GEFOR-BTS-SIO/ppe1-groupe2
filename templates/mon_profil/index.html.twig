{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center h-screen bg-white">
		<div class="flex flex-col md:flex-row items-center md:w-3/4 lg:w-1/2 bg-white shadow-lg rounded-lg p-8">
			<div class="md:w-1/3 mb-4 md:mb-0">

				<div class="flex flex-col items-center pb-10">
					<img class="w-20 h-20 rounded" src="{{ asset('uploads/photos/' ~ app.user.photo) }}" alt="Profile Picture"/>
					<h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-gray">{{ app.user.name }}</h5>
					<span class="text-sm text-gray-500 dark:text-gray-400">{{ app.user.firstname }}</span>
					{% if app.user.marital is empty %}
						<span class="text-sm text-gray-500 dark:text-gray-400">{{ app.user.marital }}</span>
					{% else %}
						<span class="text-sm text-gray-500 dark:text-gray-400">{{ app.user.marital }}</span>
					{% endif %}
					<span class="text-2xl font-bold mb-4">Formation:
						{{app.user.idCursus.cursus}}</span>
					<div class="flex mt-4 space-x-3 md:mt-6"></div>
				</div>
			</div>


			<div class="flex justify-center mt-4">
				<a href="{{ path('app_eleve_crud_edit', {'id': app.user.id}) }}" class=" bg-orange-600 rounded-3xl p-3 text-white font-bold transition duration-200 hover:bg-[#003087]">Modifier</a>
				<a href="{{ path('app_eleve_crud_index') }}" class=" bg-orange-600 rounded-3xl p-3 text-white font-bold transition duration-200 hover:bg-[#003087]">Retour Ã  la liste</a>

			</div>


		</div>
	</div>
</div>{% endblock %}
