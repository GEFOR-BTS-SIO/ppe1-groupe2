{% extends 'base.html.twig' %}

{% block title %}Eleve{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-6">
                <div class="w-16 h-16 rounded-full overflow-hidden">
                    <img src="{{ eleve.photo }}" alt="Profile Picture">
                </div>
                <div class="ml-4">
                    <h1 class="text-2xl font-bold">{{ eleve.name }} {{ eleve.firstname }}</h1>
                    <p class="text-gray-500">{{ eleve.formation }}</p>
                </div>
            </div>
            <table class="w-full border border-gray-300">
                <tbody>
                {% if is_granted('ROLE_ADMIN') %}
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Id</th>
                        <td class="px-4 py-2">{{ eleve.id }}</td>
                    </tr>
                   
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Email</th>
                        <td class="px-4 py-2">{{ eleve.email }}</td>
                    </tr>
                   
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Roles</th>
                        <td class="px-4 py-2">{{ eleve.roles ? eleve.roles|json_encode : '' }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Nom</th>
                        <td class="px-4 py-2">{{ eleve.name }}</td>
                    </tr>
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Pr√©nom</th>
                        <td class="px-4 py-2">{{ eleve.firstname }}</td>
                    </tr>
                    <tr>
                        <th class="px-4 py-2 bg-gray-100">Formation</th>
                        <td class="px-4 py-2">{{ eleve.formation }}</td>
                    </tr>
                   
                </tbody>
            </table>
        </div>
    </div>

  <div class="flex justify-center mt-4">
    <a href="{{ path('app_eleve_crud_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded inline-block">Back to List</a>

    <span class="ml-2"></span>

    <a href="{{ path('app_eleve_crud_edit', {'id': eleve.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded inline-block">Edit</a>

    <span class="ml-2"></span>

    <a href="{{ path('app_eleve_crud_delete', {'id': eleve.id}) }}" class="bg-red-500 text-white px-4 py-2 rounded inline-block">Delete</a>
</div>

{{ include('eleve_crud/_delete_form.html.twig') }}
{% endblock %}
