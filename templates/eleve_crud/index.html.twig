{% extends 'base.html.twig' %}

{% block title %}Eleve index
{% endblock %}

{% block body %}
	
       

		<div class="w-full p-6 overflow-y-auto space-y-10">
			<h1 class="text-2xl font-bold mb-4">Liste des Eleves</h1>

			<div class="flex flex-wrap gap-30 justify-between" style="margin-right: 20px; height: 200px;">
				{% for eleve in eleves %}
					{% if eleve != app.user %}
						<div class="bg-white w-30 h-30 rounded-lg shadow-md p-4 mb-6">
							<div class="flex items-center mb-4"></div>


							<img src="{{ asset('uploads/photos/' ~ eleve.photo) }}" class="w-20 h-20 object-cover rounded-full border-2 border-indigo-500 " alt="Profile Picture">

							<div class="flex items-center mb-4">
								<div class="ml-4">
									<h1 class="text-xl font-bold">{{ eleve.name }}</h1>
									<h1 class="text-xl font-bold">{{ eleve.firstname }}</h1>
									<p class="text-gray-500">{{ eleve.formation }}</p>
								</div>
							</div>
							{% if is_granted('ROLE_ADMIN') %}
								<div class="flex justify-center mt-4">
									<a href="{{ path('app_eleve_crud_edit', {'id': eleve.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded inline-block text-center ml-2">Edit</a>
								</div>
							{% endif %}

							<div class="flex justify-center mt-4">
								<a href="{{ path('app_eleve_crud_show', {'id': eleve.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded inline-block text-center">Show</a>
							</div>
						</div>
                        
					{% endif %}
				{% else %}
					<p class="text-center">No records found</p>
				{% endfor %}
			</div>
		</div>

	</div>
{% endblock %}
